{
    "type": "APL",
    "version": "1.8",
    "license": "Copyright 2021 Amazon.com, Inc. or its affiliates. All Rights Reserved.\nSPDX-License-Identifier: LicenseRef-.amazon.com.-AmznSL-1.0\nLicensed under the Amazon Software License  http://aws.amazon.com/asl/",
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.5.0"
        }
    ],
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "item": [
            {
                "type": "Container",
                "when": "${viewport.shape != 'round'}",
                "height": "100vh",
                "items": [
                    {
                        "type": "AlexaBackground",
                        "backgroundImageSource": "${payload.longTextTemplateData.properties.backgroundImage.sources[0].url}",
                        "backgroundScale": "best-fill",
                        "colorOverlay": true
                    },
                    {
                        "type": "Container",
                        "height": "100vh",
                        "width": "100vw",
                        "items": [
                            {
                                "type": "AlexaHeader",
                                "headerTitle": "${payload.longTextTemplateData.properties.title}",
                                "headerAttributionImage": "${payload.longTextTemplateData.properties.logoUrl}",
                                "headerDivider": false
                            },
                            {
                                "type": "ScrollView",
                                "grow": 1,
                                "paddingTop": "@spacingMedium",
                                "paddingBottom": "${@spacing3XLarge + @spacingXSmall}",
                                "paddingLeft": "@marginHorizontal",
                                "paddingRight": "@marginHorizontal",
                                "items": [
                                    {
                                        "text": "${payload.longTextTemplateData.properties.textContent.primaryText.text}",
                                        "textAlign": "left",
                                        "type": "Text",
                                        "id": "movieContent",
                                        "style": "textStyleDisplay4",
                                        "speech": "${payload.longTextTemplateData.properties.movieInfoSpeech}"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "type": "Container",
                "when": "${viewport.shape == 'round'}",
                "height": "100vh",
                "paddingBottom": "50",
                "items": [
                    {
                        "type": "AlexaBackground",
                        "backgroundImageSource": "${payload.longTextTemplateData.properties.backgroundImage.sources[0].url}",
                        "backgroundScale": "best-fill",
                        "colorOverlay": true
                    },
                    {
                        "position": "relative",
                        "layoutDirection": "inherit",
                        "alignItems": "stretch",
                        "justifyContent": "start",
                        "items": [
                            {
                                "type": "AlexaHeader"
                            },
                            {
                                "type": "ScrollView",
                                "minHeight": "100",
                                "paddingRight": "50",
                                "paddingLeft": "50",
                                "paddingTop": "50",
                                "paddingBottom": "50",
                                "grow": 1,
                                "bottom": "50",
                                "items": [
                                    {
                                        "textAlign": "center",
                                        "fontSize": "20",
                                        "id": "movieContent",
                                        "text": "${payload.longTextTemplateData.properties.textContent.primaryText.text}",
                                        "type": "Text",
                                        "speech": "${payload.longTextTemplateData.properties.movieInfoSpeech}"
                                    }
                                ]
                            }
                        ],
                        "type": "Container",
                        "height": "100vh"
                    }
                ]
            }
        ]
    },
    "onMount": [
        {
            "type": "SpeakItem",
            "componentId": "movieContent",
            "highlightMode": "line",
            "align": "center"
        }
    ],
    "layouts": {}
}