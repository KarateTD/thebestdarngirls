 {
        "type": "APL",
        "version": "1.6",
        "license": "Copyright 2021 Amazon.com, Inc. or its affiliates. All Rights Reserved.\nSPDX-License-Identifier: LicenseRef-.amazon.com.-AmznSL-1.0\nLicensed under the Amazon Software License  http://aws.amazon.com/asl/",
        "theme": "dark",
        "import": [
            {
                "name": "alexa-layouts",
                "version": "1.3.0"
            }
        ],
        "mainTemplate": {
            "parameters": [
                "payload"
            ],
            "item": [
                {
                    "type": "Container",
                    "when": "${@viewportProfile == @hubRoundSmall}",
                    "items": [
                        {
                            "type": "AlexaBackground",
                            "backgroundImageSource": "${payload.longTextTemplateData.properties.backgroundImage.sources[0].url}",
                            "backgroundScale": "best-fill"
                        },
                        {
                            "type": "Container",
                            "width": "100vw",
                            "height": "100vh",
                            "items": [
                                {
                                    "type": "AlexaHeader",
                                    "headerAttributionImage": "${payload.longTextTemplateData.properties.logoUrl}"
                                },
                                {
                                    "type": "ScrollView",
                                    "paddingLeft": "@marginHorizontal",
                                    "paddingTop": "@spacingMedium",
                                    "paddingRight": "@marginHorizontal",
                                    "paddingBottom": "${@spacingXLarge + @spacingXSmall}",
                                    "items": [
                                        {
                                            "type": "Text",
                                            "speech": "${payload.longTextTemplateData.properties.infoSpeech}",
                                            "textAlign": "auto",
                                            "text": "${payload.longTextTemplateData.properties.textContent.primaryText.text}",
                                            "fontSize": "19dp"
                                        }
                                    ],
                                    "grow": 1
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Container",
                    "when": "${@viewportOrientation == @viewportOrientationPortrait}",
                    "items": [
                        {
                            "type": "AlexaBackground",
                            "backgroundImageSource": "${payload.longTextTemplateData.properties.backgroundImage.sources[0].url}",
                            "backgroundScale": "best-fill"
                        },
                        {
                            "type": "Container",
                            "width": "100vw",
                            "height": "100vh",
                            "items": [
                                {
                                    "type": "AlexaHeader",
                                    "headerAttributionImage": "${payload.longTextTemplateData.properties.logoUrl}",
                                    "headerTitle": "${payload.longTextTemplateData.properties.title}",
                                    "headerSubtitle": "The Best Darn Girls"
                                },
                                {
                                    "type": "ScrollView",
                                    "paddingLeft": "@marginHorizontal",
                                    "paddingTop": "@spacingMedium",
                                    "paddingRight": "@marginHorizontal",
                                    "paddingBottom": "${@spacing3XLarge + @spacingXSmall}",
                                    "grow": 1,
                                    "items": [
                                        {
                                            "type": "Text",
                                            "textAlign": "auto",
                                            "text": "${payload.longTextTemplateData.properties.textContent.primaryText.text}",
                                            "fontSize": "25dp",
                                            "fontWeight": "normal",
                                            "lineHeight": 2
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "Container",
                    "height": "100vh",
                    "items": [
                        {
                            "type": "AlexaBackground",
                            "backgroundImageSource": "${payload.longTextTemplateData.properties.backgroundImage.sources[0].url}",
                            "backgroundScale": "best-fill"
                        },
                        {
                            "type": "Container",
                            "height": "100vh",
                            "width": "100vw",
                            "items": [
                                {
                                    "type": "AlexaHeader",
                                    "headerTitle": "${payload.longTextTemplateData.properties.title}",
                                    "headerAttributionImage": "${payload.longTextTemplateData.properties.logoUrl}",
                                    "headerSubtitle": "${payload.longTextTemplateData.properties.subtitle}"
                                },
                                {
                                    "type": "ScrollView",
                                    "grow": 1,
                                    "paddingTop": "@spacingMedium",
                                    "paddingBottom": "${@spacing3XLarge + @spacingXSmall}",
                                    "paddingLeft": "@marginHorizontal",
                                    "paddingRight": "@marginHorizontal",
                                    "items": [
                                        {
                                            "type": "Text",
                                            "text": "${payload.longTextTemplateData.properties.textContent.primaryText.text}"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "onMount": [
            {
                "type": "SpeakItem",
                "componentId": "plantContent",
                "highlightMode": "line",
                "align": "center"
            }
        ],
        "layouts": {}
    }
